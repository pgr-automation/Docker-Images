FROM golang:1.21 AS builder

# Install dependencies and clone Trivy
RUN apt-get update && apt-get install -y git
RUN wget https://github.com/aquasecurity/trivy/releases/latest/download/trivy_0.51.1_Linux-64bit.tar.gz && \
    tar -xzf trivy_0.51.1_Linux-64bit.tar.gz 

# Final image
FROM alpine:3.18

RUN apk --no-cache add ca-certificates

COPY --from=builder trivy /usr/local/bin/trivy

ENTRYPOINT ["trivy"]
